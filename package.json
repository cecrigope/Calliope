    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "~4.17.1",
    "querystring": "~0.2.0",
    "request": "~2.88.0"
  },
